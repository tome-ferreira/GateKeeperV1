@{
    ViewBag.Title = "Criar cargo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@model CreateRoleViewModel

@{
    
}

<div class="container">
    <h1>Criar cargo</h1>

    <form asp-action="CreateRole" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="RoleName" class="control-label">Nome do cargo</label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto; border-radius: 10px;">
                    Criar cargo
                </button>
            </div>
        </div>
    </form>
</div>