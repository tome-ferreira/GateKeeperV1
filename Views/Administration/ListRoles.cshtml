@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Cargos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Todos os cargos</h1>
    @if (Model.Any())
    {
        <a class="btn btn-primary mb-3" asp-action="CreateRole" asp-controller="Administration">Criar cargo</a>
        
        foreach(var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Cargo ID: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-danger">Apagar</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                Nenhum cargo criado
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    
                </h5>
                <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
                    Criar cargo
                </a>
            </div>
        </div>
    }
</div>

