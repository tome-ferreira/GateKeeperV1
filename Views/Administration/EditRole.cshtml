@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container">
    <h1>Edit Role</h1>

    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row mt-3">
            <label asp-for="RoleName" class="col-sm-2 col-form-label">Nome do cargo</label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" style="border-radius: 10px;" class="btn btn-primary">Update</button>
                <a asp-action="ListRoles" style="border-radius: 10px;" class="btn btn-primary">Cancel</a>
            </div>
        </div>

        <div class="card mt-3" style="background-color: transparent">
            <div class="card-header">
                <h3>Users in this role</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" style="border-radius: 10px;" asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" style="width:auto">Manage users</a>
            </div>
        </div>
    </form>
</div>