@model Plan
@{
    ViewBag.Title = Model.Name + "plan details";
}

<div class="container">
    <h1>@Model.Name Plan</h1>
    <div class="card mb-3" style="background-color: transparent">

        <div class="card-body">
            @if (Model.BuildingsN == 0)
            {
                <h4 class="card-body">Number of buildings sites: Unlimited</h4>
            }
            else
            {
                <h4 class="card-body">Number of construction buildings: @Model.BuildingsN</h4>
            }

            @if (Model.RegistsPerMonth == 0)
            {
                <h4 class="card-body">Number of regists per month: Unlimited</h4>
            }
            else
            {
                <h4 class="card-body">Number of regists per month: @Model.RegistsPerMonth</h4>
            }


            @if (Model.Workers == 0)
            {
                <h4 class="card-body">Number of workers: Unlimited</h4>
            }
            else
            {
                <h4 class="card-body">Number of workers: @Model.Workers</h4>
            }

            @if (Model.DashboardAccounts == 0)
            {
                <h4 class="card-body">Number of dashboard accounts: Unlimited</h4>
            }
            else
            {
                <h4 class="card-body">Number of dashboard accounts: @Model.DashboardAccounts</h4>
            }

            @if (Model.HasExcel == true)
            {
                <h4 class="card-body">Has access to Excel reports</h4>
            }
            else
            {
                <h4 class="card-body">Does not have access to Excel reports</h4>
            }

            <h4 class="card-body">Monthly price: @Model.MonthlyPrice €</h4>
            <h4 class="card-body">Annualy price: @Model.AnualPrice €</h4>
        </div>
        <div class="card-footer">
            <div>
                <div>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmationModal">Delete</button>
                    <a class="btn btn-dark" asp-action="Index" asp-controller="Plan">Go back</a>

                </div>

            </div>

        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel" style="color: #000;">Delete plan</h1>
            </div>
            <div class="modal-body" style="color: #000;">
                This operation can not be undone. Are you sure that you want to delete this plan?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                <a class="btn btn-danger" asp-action="DeletePlan" asp-controller="Plan" asp-route-id="@Model.Id">Confirm</a>
            </div>
        </div>
    </div>
</div>
<!-- End of Modal -->