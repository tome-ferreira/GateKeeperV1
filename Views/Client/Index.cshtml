@model List<Company>
@{
    ViewBag.Title = "Your companies";
    Layout = "/Views/Shared/_LayoutYourCompanies.cshtml";
}

<div class="">
    <div class="container">
        <h1 class="display-3">As suas empresas</h1>

        @if (Model.Count == 0)
        {
            <div class="row text-center">
                <h3>Ups! Parece que não é parte de nenhuma empresa. Por favor aguarde até ser adicionado a uma ou crie a sua agora.</h3>
                <a class="btn btn-primary" asp-action="RegistCompany" asp-controller="Company">Regist a new company</a>
            </div>
        }
        else
        {
            <div class="row mt-3 mb-3 gx-3 gy-3">
                @foreach (var p in Model)
                {
                    <div class="col-md-4">
                        <a asp-action="Index" asp-controller="Dashboard" asp-route-CompanyId="@p.Id" class="text-decoration-none">
                            <div class=" h-100 your-companies-card border-radius-20">
                                <div class=" p-0">
                                    <img src="~/img/select_company_img.png" alt="company" class="select-company-img img-fluid" />
                                </div>
                                <div class=" mt-3">
                                    <h2 class="text-gatekeeper-green">@p.Name</h2>
                                    
                                </div>
                                <div class="">
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }

        
    </div>
</div>

