@model RegisterViewModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Account";
}

<div class="d-flex justify-content-center align-items-center vh-100 costum-background-login-register">
    <div class="card p-4 shadow-lg login-register-card">
        <div class="text-center">
            <h1 class="mb-4">
                <img src="/img/logos/logoSmall.png" alt="Logo" class="img-fluid login-register-logo" />
            </h1>
            <h4 class="mb-4">Create Account</h4>
        </div>

        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="bx bx-envelope"></i> Email
                </label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 row">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">
                        <i class="bx bx-user"></i> First Name
                    </label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Surname" class="form-label">
                        <i class="bx bx-user"></i> Last Name
                    </label>
                    <input asp-for="Surname" class="form-control" required />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-md-12">
                    <label asp-for="Password" class="form-label">
                        <i class="bx bx-key"></i> Password
                    </label>
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-md-12">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="bx bx-key"></i> Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none login-register-links">Já tem uma conta? Inicie sessão</a>
        </div>
    </div>
</div>
